<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/gaiatosfc?createDatabaseIfNotExist=true</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password"></property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <mapping class="br.com.gaiatosfc.model.Adversarios"/>
    <mapping class="br.com.gaiatosfc.model.Campeonatos"/>
    <mapping class="br.com.gaiatosfc.model.Fale"/>
    <mapping class="br.com.gaiatosfc.model.Gols"/>
    <mapping class="br.com.gaiatosfc.model.GolsAdv"/>
    <mapping class="br.com.gaiatosfc.model.Jogadores"/>
    <mapping class="br.com.gaiatosfc.model.JogadoresAdv"/>
    <mapping class="br.com.gaiatosfc.model.Jogos"/>
    <mapping class="br.com.gaiatosfc.model.Noticias"/>
  </session-factory>
</hibernate-configuration>
